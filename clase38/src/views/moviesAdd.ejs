<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies" method="POST">
            <label for="title">Title </label>
            <p><input type="text" name="title" id=""></p>
            <% if(locals.errors && locals.errors.title) { %>
                <p class="error"><%= errors.title.msg %></p>
            <% } %>
            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id=""> </p>
            <% if(locals.errors && locals.errors.rating) { %>
                <p class="error"><%= errors.rating.msg %></p>
            <% } %>
            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id=""></p>
            <% if(locals.errors && locals.errors.awards) { %>
                <p class="error"><%= errors.awards.msg %></p>
            <% } %>
            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id=""></p>
            <% if(locals.errors && locals.errors.release_date) { %>
                <p class="error"><%= errors.release_date.msg %></p>
            <% } %>
            <label for="length">Length </label>
            <p><input type="number" name="length" id=""></p>
            <% if(locals.errors && locals.errors.length) { %>
                <p class="error"><%= errors.length.msg %></p>
            <% } %>

            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>